{
  "name": "aiofix-clean-architecture-start",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "libs:fix": "pnpm dlx sherif@latest --fix",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky install",
    "install:deps": "./scripts/install-dependencies.sh",
    "start:dev": "./scripts/start-dev.sh",
    "api:dev": "cd apps/api && pnpm run start:dev",
    "api:build": "cd apps/api && pnpm run build",
    "api:test": "cd apps/api && pnpm test"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "cz-config.cjs"
    }
  },
  "devDependencies": {
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=18"
  }
}
